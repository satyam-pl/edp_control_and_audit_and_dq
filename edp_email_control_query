CREATE TABLE edp_edproddb_srv01.edp_meta.edp_email_control (
  SOURCE_OBJECT_KEY INT,
  SOURCE_SYSTEM VARCHAR(500),
  TEMPLATE_ID INT,
  EMAIL_TYPE VARCHAR(30),
  PROCESS_STEP VARCHAR(50),
  EMAIL_FROM VARCHAR(500),
  EMAIL_TO VARCHAR(2147483647),
  EMAIL_CC VARCHAR(2147483647),
  ATTACHMENT_FLAG INT,
  ATTACHMENT_FILE_LOCATION VARCHAR(500),
  IS_ACTIVE INT,
  SEND_TO_BUSINESS INT)
USING sqlserver
